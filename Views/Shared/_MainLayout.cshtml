<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - LMS</title>
    <link href="~/Content/site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <link href="~/Content/lmscustom.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/custom.css" rel="stylesheet" />
</head>
<body style="padding:unset">
   
    <div class="d-flex flex-column min-vh-100">

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <span class="icon">
                <i class="fas fa-book-open"></i>
            </span>
            @Html.ActionLink("LMS", "Home", "Main", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item btn-sm btn-dark">
                        @*<i class="fas fa-home"></i>*@
                        @Html.ActionLink("Home", "Home", "Main", new { @class = "nav-link icon", style = "display:inline" })
                    </li>
                    <li class="nav-item btn-sm btn-dark">
                        @*<i class="fas fa-address-card"></i>*@
                        @Html.ActionLink("About", "About", "Main", new { @class = "nav-link icon", style = "display:inline" })
                    </li>
                    <li class="nav-item btn-sm btn-dark">
                        @*<i class="fas fa-id-badge"></i>*@
                        @Html.ActionLink("Contact", "Contact", "Main", new { @class = "nav-link icon", style = "display:inline" })
                    </li>
                </ul>

                <ul class="navbar-nav justify-content-end">
                    <li class="nav-item btn-sm btn-success" id="btn-round">
                        <i class="fas fa-sign-in-alt"></i>
                        @Html.ActionLink("Login", "Login", "Main", new { @class = "nav-link icon", style = "display:inline" })
                    </li>
                </ul>
            </div>
        </nav>

        
        <div class="flex-fill" >
             @RenderBody()
        </div>

        <footer>
            <div style="" class="card text-center text-white bg-dark">
                <div class="card-header">
                    Thank you for visiting us .
                </div>
                <p>&copy; @DateTime.Now.Year - LMS</p>
            </div>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>